#include "iostream" //директива ввода/вывода
#include "math.h" //директива для работы с математическими функциями
using namespace std; //объявление пространства имен
int main()
{
	setlocale(LC_ALL, "RUS"); //русские символы
	int i = 0; //объявление переменных
	double sum = 0, k = 0, s = 0, m = 0, q = 0, a, b;
	double x[11]; //объявление массива из 5 целых чисел с именем massiv
	double y[11];
	cout << "Введите с клавиатуры 11 чисел x через пробел\n";
	for (i = 0; i < 11; i++)
	{
		cin >> x[i]; //ввод с клавиатуры 11 целых чисел x
	}
	cout << "Введите с клавиатуры 11 чисел y через пробел\n";
	for (i = 0; i < 11; i++)
	{
		cin >> y[i]; //ввод с клавиатуры 5 целых чисел x
	}
	for (i = 0; i < 11; i++)
	{
		k += x[i] * y[i];
		s += x[i];
		sum += y[i];
		m += pow(x[i], 2);

		a = ((11 * k) - (s * sum)) / ((11 * m) - (pow(s, 2)));
		b = (sum - (a * s)) / 11;



	}

	cout << "y = " << round(a * 1000) / 1000 << "x + " << round(b * 1000) / 1000 << "\n";
	cout << "Оценка погрешности метода наименьших квадратов: \n";
	for (i = 0; i < 11; i++)
	{
		q += pow((y[i] - (a * x[i] + b)), 2);
	}
	cout << "q = " << round(q * 1000) / 1000 << "\n";
	system("pause"); //задержка экрана
	return 0;
}
